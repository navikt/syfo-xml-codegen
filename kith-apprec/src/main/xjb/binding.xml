<bindings xmlns="http://java.sun.com/xml/ns/jaxb" version="2.1"
          xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
          xmlns:xsd="http://www.w3.org/2001/XMLSchema"
          xmlns:xs="http://www.w3.org/2001/XMLSchema">

    <globalBindings>
        <xjc:javaType name="java.time.LocalDate" xmlType="xs:date"
                      adapter="com.migesok.jaxb.adapter.javatime.LocalDateXmlAdapter" />
        <xjc:javaType name="java.time.LocalDateTime" xmlType="xs:dateTime"
                      adapter="com.migesok.jaxb.adapter.javatime.LocalDateTimeXmlAdapter" />

    </globalBindings>

    <bindings schemaLocation="../xsd/AppRec-v1.0.xsd">
        <schemaBindings>
            <nameXmlTransform>
                <typeName prefix="XML"/>
                <elementName prefix="XML"/>
            </nameXmlTransform>
        </schemaBindings>
    </bindings>

    <bindings schemaLocation="../xsd/kith.xsd">
        <schemaBindings>
            <nameXmlTransform>
                <typeName prefix="XML"/>
                <elementName prefix="XML"/>
            </nameXmlTransform>
        </schemaBindings>
    </bindings>

</bindings>
